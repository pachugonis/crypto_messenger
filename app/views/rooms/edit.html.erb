<turbo-frame id="modal">
  <div class="modal-backdrop" data-controller="modal" data-action="click->modal#closeOnBackdrop keydown@window->modal#closeOnEscape">
    <div class="modal" data-modal-target="content">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold"><%= t("rooms.edit.title") %></h2>
        <%= link_to @room, class: "btn-icon btn-ghost", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        <% end %>
      </div>

      <%= form_with model: @room, class: "space-y-4" do |f| %>
        <% if @room.errors.any? %>
          <div class="p-4 rounded-lg bg-error/20 text-error border border-error/30 text-sm">
            <ul class="list-disc list-inside space-y-1">
              <% @room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: "input", required: true %>
        </div>

        <div>
          <%= f.label :description, class: "label" %>
          <%= f.text_area :description, class: "input", rows: 3 %>
        </div>

        <% if @room.channel? %>
          <div>
            <%= f.label :visibility, class: "label" %>
            <%= f.select :visibility, [
              [t("rooms.visibility.private"), "private_room"],
              [t("rooms.visibility.public"), "public_room"]
            ], {}, class: "input" %>
          </div>
        <% end %>

        <hr class="border-dark-border">

        <h3 class="font-semibold"><%= t("rooms.show.participants") %></h3>
        <div class="space-y-2 max-h-48 overflow-y-auto">
          <% @room.room_participants.includes(:user).each do |participant| %>
            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-dark-surface-hover">
              <div class="flex items-center gap-2">
                <div class="avatar avatar-sm">
                  <%= participant.user.username[0].upcase %>
                </div>
                <span><%= participant.user.username %></span>
                <% if participant.owner? %>
                  <span class="badge badge-primary text-xs"><%= t("participants.roles.owner") %></span>
                <% elsif participant.admin? %>
                  <span class="badge badge-warning text-xs"><%= t("participants.roles.admin") %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= link_to t("common.cancel"), @room, class: "btn btn-secondary flex-1", data: { turbo_frame: "modal" } %>
          <%= f.submit t("common.save"), class: "btn btn-primary flex-1" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>

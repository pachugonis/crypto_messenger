<turbo-frame id="modal">
  <div class="modal-backdrop" data-controller="modal" data-action="click->modal#closeOnBackdrop">
    <div class="modal-content max-w-2xl" data-action="click->modal#stopPropagation">
      <div class="modal-header">
        <h2 class="modal-title"><%= t("two_factor.setup.title") %></h2>
        <button class="modal-close" data-action="click->modal#close" type="button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

    <div class="modal-body custom-scrollbar space-y-6">
      <!-- Step 1: Scan QR Code -->
      <div class="space-y-3">
        <h3 class="font-semibold text-lg flex items-center gap-2">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-primary text-white text-sm">1</span>
          <%= t("two_factor.setup.step1") %>
        </h3>
        <p class="text-dark-text-muted text-sm"><%= t("two_factor.setup.step1_description") %></p>
        
        <div class="flex justify-center p-6 bg-white rounded-lg">
          <%= @qr_code.html_safe %>
        </div>
      </div>

      <!-- Step 2: Backup Codes -->
      <div class="space-y-3">
        <h3 class="font-semibold text-lg flex items-center gap-2">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-primary text-white text-sm">2</span>
          <%= t("two_factor.setup.step2") %>
        </h3>
        <p class="text-dark-text-muted text-sm"><%= t("two_factor.setup.step2_description") %></p>
        
        <div class="card bg-dark-surface">
          <div class="flex items-start gap-3 mb-4">
            <svg class="w-5 h-5 text-warning flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <p class="font-medium text-warning"><%= t("two_factor.setup.backup_codes_warning") %></p>
          </div>
          
          <div class="grid grid-cols-2 gap-2 mb-4">
            <% @backup_codes.each do |code| %>
              <div class="px-3 py-2 bg-dark-bg rounded font-mono text-sm text-center">
                <%= code %>
              </div>
            <% end %>
          </div>

          <button onclick="navigator.clipboard.writeText(this.getAttribute('data-codes')).then(() => { this.innerHTML = '✓ Скопировано!'; this.classList.add('btn-success'); this.classList.remove('btn-secondary'); setTimeout(() => { this.innerHTML = this.getAttribute('data-original'); this.classList.remove('btn-success'); this.classList.add('btn-secondary'); }, 2000); }).catch(() => alert('Ошибка копирования'))" data-codes="<%= @backup_codes.join("\n") %>" data-original="<svg class='w-4 h-4 mr-2' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z'/></svg><%= t('two_factor.backup_codes.copy_all') %>" class="btn btn-secondary btn-sm w-full">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <%= t("two_factor.backup_codes.copy_all") %>
          </button>
        </div>
      </div>

      <!-- Step 3: Verify -->
      <div class="space-y-3">
        <h3 class="font-semibold text-lg flex items-center gap-2">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-primary text-white text-sm">3</span>
          <%= t("two_factor.setup.step3") %>
        </h3>
        <p class="text-dark-text-muted text-sm"><%= t("two_factor.setup.step3_description") %></p>
      </div>
    </div>
    
    <%= form_with url: verify_two_factor_settings_path, method: :post, data: { turbo_frame: "modal" } do |f| %>
      <div class="px-6 pb-6">
        <%= f.label :otp_code, t("two_factor.code_placeholder"), class: "label" %>
        <%= f.text_field :otp_code, 
            class: "input text-center text-2xl tracking-widest",
            placeholder: "000000",
            autocomplete: "one-time-code",
            inputmode: "numeric",
            pattern: "[0-9]*",
            maxlength: 6,
            required: true %>
      </div>
      
      <div class="modal-footer">
        <button class="btn btn-secondary" data-action="click->modal#close" type="button">
          <%= t("common.cancel") %>
        </button>
        <%= f.submit t("two_factor.verify_button"), class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
    </div>
  </div>
</turbo-frame>

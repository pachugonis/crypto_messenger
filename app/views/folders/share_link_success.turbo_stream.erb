<%= turbo_stream.update "modal" do %>
  <div class="modal-backdrop" data-controller="modal" data-action="click->modal#close">
    <div class="modal-content" data-action="click->modal#stopPropagation">
      <div class="modal-header">
        <h2 class="modal-title"><%= t("folders.share.title") %></h2>
        <button class="modal-close" data-action="click->modal#close" type="button">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="modal-body">
        <div class="bg-success/10 border border-success/30 rounded-lg p-4 mb-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-success flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="flex-1">
              <h3 class="font-semibold text-success mb-1"><%= t("folders.share.link_created") %></h3>
              <p class="text-sm text-dark-text-muted"><%= t("folders.share.link_created_description") %></p>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div>
            <label class="form-label"><%= t("folders.share.share_link") %></label>
            <div class="flex gap-2">
              <input type="text" readonly value="<%= shared_folder_url(@token) %>" class="input text-sm flex-1" id="modal_share_url">
              <button class="btn btn-primary btn-sm" id="modal_copy_btn" onclick="copyModalShareLink()">
                <%= t("common.copy") %>
              </button>
            </div>
          </div>

          <% if @folder.share_expires_at %>
            <p class="text-xs text-dark-text-muted">
              <%= t("folders.share.expires_at", date: l(@folder.share_expires_at, format: :long)) %>
            </p>
          <% end %>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-action="click->modal#close">
          <%= t("common.close") %>
        </button>
      </div>
    </div>
  </div>
  
  <script>
    function copyModalShareLink() {
      const input = document.getElementById('modal_share_url');
      const btn = document.getElementById('modal_copy_btn');
      const originalText = btn.textContent.trim();
      
      navigator.clipboard.writeText(input.value).then(() => {
        btn.textContent = '<%= t("common.copied") %>';
        setTimeout(() => {
          btn.textContent = originalText;
        }, 2000);
      });
    }
  </script>
<% end %>

<%= turbo_stream.update "folder_share_link" do %>
  <%= render partial: "folders/share_link", locals: { folder: @folder, token: @token } %>
<% end %>

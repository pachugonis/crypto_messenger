<div class="flex flex-col h-full" data-controller="room" data-room-id-value="<%= @room.id %>">
  <!-- Room header -->
  <header class="flex items-center justify-between px-4 py-3 border-b border-dark-border bg-dark-surface">
    <div class="flex items-center gap-3">
      <div class="avatar">
        <% if @room.personal_chat? %>
          <% other_user = @room.users.where.not(id: current_user.id).first %>
          <% if other_user&.avatar&.attached? %>
            <%= image_tag other_user.avatar, alt: other_user&.username %>
          <% else %>
            <%= other_user&.username&.first&.upcase || "?" %>
          <% end %>
        <% else %>
          <% if @room.channel? %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
            </svg>
          <% else %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          <% end %>
        <% end %>
      </div>
      <div>
        <h2 class="font-semibold">
          <% if @room.personal_chat? %>
            <%= @room.users.where.not(id: current_user.id).first&.username %>
          <% else %>
            <%= @room.name %>
          <% end %>
        </h2>
        <p class="text-sm text-dark-text-muted">
          <% if @room.personal_chat? %>
            <%= t("common.online") %>
          <% else %>
            <%= @room.participants_count %> <%= t("participants.roles.member").pluralize(@room.participants_count) %>
          <% end %>
        </p>
      </div>
    </div>
    
    <div class="flex items-center gap-2">
      <div class="relative" data-controller="dropdown">
        <button class="btn-icon btn-ghost" data-action="click->dropdown#toggle">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
          </svg>
        </button>
        <div class="dropdown hidden" data-dropdown-target="menu">
          <% unless @room.personal_chat? %>
            <%= link_to new_room_participants_path(@room), class: "dropdown-item flex items-center gap-2", data: { turbo_frame: "modal" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
              <%= t("participants.add") %>
            <% end %>
            <%= link_to edit_room_path(@room), class: "dropdown-item flex items-center gap-2", data: { turbo_frame: "modal" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <%= t("rooms.show.settings") %>
            <% end %>
          <% end %>
          <%= button_to leave_room_path(@room), method: :post, class: "dropdown-item flex items-center gap-2 w-full text-left" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            <%= t("rooms.show.leave") %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Messages container -->
  <div class="flex-1 overflow-y-auto custom-scrollbar p-4" id="messages-container" data-controller="scroll" data-scroll-bottom-value="true">
    <div id="messages" class="space-y-1">
      <% @messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
    
    <!-- Typing indicator -->
    <div id="typing-indicator" class="typing-indicator hidden">
      <span data-typing-target="text"></span>
      <span class="typing-dot"></span>
      <span class="typing-dot"></span>
      <span class="typing-dot"></span>
    </div>
  </div>

  <!-- Message input -->
  <% if @room.can_write?(current_user) %>
    <div class="chat-input-container">
      <%= form_with model: [@room, Message.new], id: "message_form", class: "flex items-end gap-2 w-full", data: { controller: "message-form", action: "turbo:submit-end->message-form#reset" } do |f| %>
        <%= f.text_area :content, 
            class: "chat-input", 
            placeholder: t("rooms.show.message_placeholder"), 
            rows: 1,
            data: { 
              message_form_target: "input",
              action: "input->message-form#resize keydown->message-form#handleKeydown input->room#typing"
            } %>
        <button type="submit" class="btn btn-primary btn-icon" data-message-form-target="submit">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
        </button>
      <% end %>
    </div>
  <% else %>
    <div class="chat-input-container justify-center">
      <p class="text-dark-text-muted text-sm"><%= t("common.access_denied") %></p>
    </div>
  <% end %>
</div>

<%= turbo_stream.update "main-content" do %>
  <div class="flex-1 flex items-center justify-center p-8">
    <div class="text-center">
      <svg class="w-16 h-16 mx-auto mb-4 text-dark-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <h2 class="text-xl font-bold mb-2"><%= t("rooms.index.title") %></h2>
      <p class="text-dark-text-muted"><%= t("rooms.index.empty") %></p>
    </div>
  </div>
<% end %>

<%= turbo_stream.update "rooms-sidebar" do %>
  <%= render "rooms/list", rooms: @rooms %>
<% end %>

<%= turbo_stream.prepend "flash-messages" do %>
  <div class="toast toast-success" data-controller="toast" data-toast-delay-value="3000">
    <%= t("rooms.messages.deleted") %>
  </div>
<% end %>

<%= link_to room_path(room), class: "room-item #{'active' if defined?(@room) && @room == room}", data: { turbo_frame: "main-content" } do %>
  <div class="avatar">
    <% if room.personal_chat? %>
      <% other_user = room.users.where.not(id: current_user.id).first %>
      <% if other_user&.avatar&.attached? %>
        <%= image_tag other_user.avatar, alt: other_user&.username %>
      <% else %>
        <%= other_user&.username&.first&.upcase || "?" %>
      <% end %>
    <% else %>
      <% if room.image.attached? %>
        <%= image_tag room.image.variant(resize_to_limit: [100, 100]), alt: room.name, class: "w-full h-full object-cover rounded-full" %>
      <% elsif room.channel? %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
        </svg>
      <% else %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      <% end %>
    <% end %>
  </div>
  
  <div class="flex-1 min-w-0">
    <div class="flex items-center justify-between">
      <span class="font-medium truncate">
        <% if room.personal_chat? %>
          <%= room.users.where.not(id: current_user.id).first&.username || t("rooms.types.personal_chat") %>
        <% else %>
          <%= room.name %>
        <% end %>
      </span>
      <% if room.last_message %>
        <span class="text-xs text-dark-text-muted">
          <%= l(room.last_message.created_at, format: :short) %>
        </span>
      <% end %>
    </div>
    <div class="flex items-center justify-between mt-0.5">
      <span class="text-sm text-dark-text-muted truncate">
        <% if room.last_message %>
          <% if room.last_message.deleted? %>
            <em><%= t("messages.deleted") %></em>
          <% else %>
            <span class="text-dark-text-muted"><%= room.last_message.user.username %>:</span>
            <%= truncate(room.last_message.content, length: 30) %>
          <% end %>
        <% else %>
          <em><%= t("rooms.index.empty") %></em>
        <% end %>
      </span>
      <% unread = room.unread_count_for(current_user) %>
      <% if unread > 0 %>
        <span class="badge badge-primary"><%= unread > 99 ? "99+" : unread %></span>
      <% end %>
    </div>
  </div>
<% end %>

<turbo-frame id="main-content" class="flex-1 flex flex-col overflow-hidden">
  <!-- Empty state when no room is selected -->
  <div class="flex-1 flex items-center justify-center">
    <div class="text-center">
      <svg class="w-24 h-24 mx-auto text-dark-text-muted opacity-50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <h3 class="text-xl font-medium text-dark-text-muted mb-2"><%= t("rooms.index.title") %></h3>
      <p class="text-dark-text-muted mb-6"><%= t("rooms.index.empty") %></p>
      <div class="flex gap-3 justify-center">
        <%= link_to new_room_path(type: :group), class: "btn btn-primary", data: { turbo_frame: "modal" } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <%= t("rooms.index.new_group") %>
        <% end %>
        <%= link_to new_room_path(type: :channel), class: "btn btn-secondary", data: { turbo_frame: "modal" } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
          </svg>
          <%= t("rooms.index.new_channel") %>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>

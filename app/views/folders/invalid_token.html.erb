<% content_for :title, t('folders.share.invalid_link') %>

<div class="min-h-screen">
  <!-- Header -->
  <header class="bg-dark-surface border-b border-dark-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <%= link_to root_url, class: "flex items-center gap-2 hover:opacity-80 transition-opacity" do %>
        <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <div>
          <div class="font-bold text-dark-text"><%= t("app.name") %></div>
          <div class="text-xs text-dark-text-muted"><%= t("app.tagline") %></div>
        </div>
      <% end %>
    </div>
  </header>

  <div class="flex items-center justify-center px-4 py-20">
    <div class="text-center">
      <svg class="w-24 h-24 mx-auto text-error mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      <h1 class="text-2xl font-bold mb-2"><%= t("folders.share.invalid_link") %></h1>
      <p class="text-dark-text-muted"><%= t("folders.share.invalid_description") %></p>
    </div>
  </div>
</div>

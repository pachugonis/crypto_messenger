<div class="p-6">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">Создать рекламный блок</h1>

    <%= form_with model: [:admin, @advertisement], class: "space-y-4" do |f| %>
      <%= render "form", f: f %>
      
      <div class="flex gap-3 justify-end">
        <%= link_to "Отмена", admin_advertisements_path, class: "btn btn-secondary" %>
        <%= f.submit "Создать", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%# Close modal %>
<%= turbo_stream.update "modal" do %>
<% end %>

<%# Update the current folder's header if we're viewing it %>
<%= turbo_stream.update "folder-header" do %>
  <!-- Breadcrumb -->
  <nav class="flex items-center gap-2 text-sm mb-6">
    <%= link_to folders_path, class: "text-dark-text-muted hover:text-primary" do %>
      <%= t("folders.index.title") %>
    <% end %>
    <% @folder.ancestors.each do |ancestor| %>
      <span class="text-dark-text-muted">/</span>
      <%= link_to ancestor.name, folder_path(ancestor), class: "text-dark-text-muted hover:text-primary" %>
    <% end %>
    <span class="text-dark-text-muted">/</span>
    <span class="font-medium"><%= @folder.name %></span>
  </nav>

  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold"><%= @folder.name %></h1>
    <div class="flex gap-2">
      <%= link_to new_folder_path(parent_id: @folder.id), class: "btn btn-secondary btn-sm", data: { turbo_frame: "modal" } do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
        </svg>
        <%= t("folders.index.new") %>
      <% end %>
      <label class="btn btn-primary btn-sm cursor-pointer">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
        </svg>
        <%= t("folders.show.upload") %>
        <%= form_with url: folder_attachments_path(@folder), method: :post, multipart: true, data: { controller: "upload", action: "change->upload#submit" } do |f| %>
          <%= f.file_field :file, class: "hidden", data: { upload_target: "input" } %>
        <% end %>
      </label>
      <div class="relative" data-controller="dropdown">
        <button class="btn-icon btn-ghost" data-action="click->dropdown#toggle">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
          </svg>
        </button>
        <div class="dropdown hidden" data-dropdown-target="menu">
          <%= link_to edit_folder_path(@folder), class: "dropdown-item flex items-center gap-2", data: { turbo_frame: "modal" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <%= t("folders.actions.rename") %>
          <% end %>
          <%= button_to folder_path(@folder), method: :delete, class: "dropdown-item flex items-center gap-2 w-full text-left text-error", data: { turbo_confirm: t("folders.actions.confirm_delete") } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <%= t("folders.actions.delete") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if @parent_folder %>
  <%# Update subfolders section in parent folder %>
  <%= turbo_stream.update "subfolders-section" do %>
    <% if @subfolders.any? %>
      <h2 class="font-semibold text-dark-text-muted mb-3"><%= t("nav.folders") %></h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3 mb-6">
        <% @subfolders.each do |folder| %>
          <div class="card p-3 hover:border-primary transition-colors group relative">
            <%= link_to folder_path(folder), class: "flex items-center gap-2" do %>
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
              </svg>
              <span class="font-medium truncate flex-1"><%= folder.name %></span>
            <% end %>
            <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity" data-controller="dropdown">
              <button class="btn-icon btn-ghost btn-sm" data-action="click->dropdown#toggle" onclick="event.preventDefault(); event.stopPropagation();">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                </svg>
              </button>
              <div class="dropdown hidden" data-dropdown-target="menu">
                <%= link_to edit_folder_path(folder), class: "dropdown-item flex items-center gap-2", data: { turbo_frame: "modal" }, onclick: "event.stopPropagation();" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t("folders.actions.rename") %>
                <% end %>
                <%= button_to folder_path(folder), method: :delete, class: "dropdown-item flex items-center gap-2 w-full text-left text-error", data: { turbo_confirm: t("folders.actions.confirm_delete") }, onclick: "event.stopPropagation();" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t("folders.actions.delete") %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%# Update root folders list %>
  <%= turbo_stream.update "folders-list" do %>
    <% if @folders.any? %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @folders.each do |folder| %>
          <div class="card hover:border-primary transition-colors group relative">
            <%= link_to folder_path(folder), class: "flex flex-col items-center text-center" do %>
              <svg class="w-16 h-16 text-primary mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
              </svg>
              <span class="font-medium truncate w-full"><%= folder.name %></span>
              <span class="text-sm text-dark-text-muted mt-1">
                <%= folder.attachments.count %> <%= t("attachments.upload").downcase %>
              </span>
            <% end %>
            <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity" data-controller="dropdown">
              <button class="btn-icon btn-ghost btn-sm" data-action="click->dropdown#toggle" onclick="event.preventDefault(); event.stopPropagation();">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                </svg>
              </button>
              <div class="dropdown hidden" data-dropdown-target="menu">
                <%= link_to edit_folder_path(folder), class: "dropdown-item flex items-center gap-2", data: { turbo_frame: "modal" }, onclick: "event.stopPropagation();" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t("folders.actions.rename") %>
                <% end %>
                <%= button_to folder_path(folder), method: :delete, class: "dropdown-item flex items-center gap-2 w-full text-left text-error", data: { turbo_confirm: t("folders.actions.confirm_delete") }, onclick: "event.stopPropagation();" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t("folders.actions.delete") %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="flex-1 flex items-center justify-center">
        <div class="text-center">
          <svg class="w-24 h-24 mx-auto text-dark-text-muted opacity-50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
          <p class="text-dark-text-muted"><%= t("folders.index.empty") %></p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

<%# Show success toast %>
<%= turbo_stream.prepend "main-content" do %>
  <div class="toast toast-success" data-controller="toast" data-toast-delay-value="3000">
    <%= t("folders.messages.updated") %>
  </div>
<% end %>

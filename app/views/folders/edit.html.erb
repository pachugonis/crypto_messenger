<turbo-frame id="modal">
  <div class="modal-backdrop" data-controller="modal" data-action="click->modal#closeOnBackdrop keydown@window->modal#closeOnEscape">
    <div class="modal" data-modal-target="content">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold"><%= t("folders.edit.title") %></h2>
        <%= link_to @folder.parent_folder || folders_path, class: "btn-icon btn-ghost", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        <% end %>
      </div>

      <%= form_with model: @folder, class: "space-y-4" do |f| %>
        <%= f.hidden_field :parent_folder_id %>

        <% if @folder.errors.any? %>
          <div class="p-4 rounded-lg bg-error/20 text-error border border-error/30 text-sm">
            <ul class="list-disc list-inside space-y-1">
              <% @folder.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: "input", required: true, autofocus: true %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= link_to t("common.cancel"), @folder.parent_folder || folders_path, class: "btn btn-secondary flex-1", data: { turbo_frame: "modal" } %>
          <%= f.submit t("common.save"), class: "btn btn-primary flex-1" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>

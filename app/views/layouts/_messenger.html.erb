<div class="flex h-screen overflow-hidden">
  <!-- Sidebar -->
  <aside class="sidebar" data-controller="sidebar">
    <!-- Header -->
    <div class="p-4 border-b border-dark-border flex items-center justify-between">
      <h1 class="text-xl font-bold text-primary"><%= t("app.name") %></h1>
      <div class="flex items-center gap-2">
        <button class="btn-icon btn-ghost" data-action="click->theme#toggle" title="<%= t('settings.appearance.theme') %>">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
        </button>
        <div class="relative" data-controller="dropdown">
          <button class="btn-icon btn-ghost" data-action="click->dropdown#toggle">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
            </svg>
          </button>
          <div class="dropdown hidden" data-dropdown-target="menu">
            <%= link_to folders_path, class: "dropdown-item flex items-center gap-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
              </svg>
              <%= t("nav.folders") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to admin_root_path, class: "dropdown-item flex items-center gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= t("nav.admin") %>
              <% end %>
            <% end %>
            <hr class="my-2 border-dark-border">
            <%= button_to session_path, method: :delete, class: "dropdown-item flex items-center gap-2 w-full text-left text-error" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              <%= t("nav.logout") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Search -->
    <div class="p-3">
      <%= form_with url: search_path, method: :get, data: { turbo_frame: "search-results", controller: "search", action: "input->search#submit" } do |f| %>
        <div class="relative">
          <svg class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-dark-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <%= f.text_field :q, class: "input pl-10", placeholder: t("rooms.index.search_placeholder"), autocomplete: "off" %>
        </div>
      <% end %>
    </div>

    <!-- New chat buttons -->
    <div class="px-3 pb-3 flex gap-2">
      <%= link_to new_room_path(type: :personal_chat), class: "btn btn-primary btn-sm flex-1", data: { turbo_frame: "modal" } do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("rooms.index.new_chat") %>
      <% end %>
    </div>

    <!-- Rooms list -->
    <div class="flex-1 overflow-y-auto custom-scrollbar">
      <turbo-frame id="rooms-sidebar">
        <%= render "rooms/list", rooms: current_user.rooms.includes(:users, :messages).order(updated_at: :desc) %>
      </turbo-frame>
    </div>

    <!-- User info -->
    <div class="p-3 border-t border-dark-border">
      <div class="flex items-center gap-3">
        <div class="avatar avatar-sm">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, alt: current_user.username %>
          <% else %>
            <%= current_user.username[0].upcase %>
          <% end %>
        </div>
        <div class="flex-1 min-w-0">
          <div class="font-medium truncate"><%= current_user.username %></div>
          <div class="text-xs text-dark-text-muted truncate"><%= current_user.role == "admin" ? t("admin.roles.admin") : t("admin.roles.user") %></div>
        </div>
        <%= button_to session_path, method: :delete, class: "btn-icon btn-ghost text-error", title: t("nav.logout") do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
        <% end %>
      </div>
    </div>
  </aside>

  <!-- Main content -->
  <main class="flex-1 flex flex-col bg-dark-bg overflow-hidden">
    <% if flash[:notice] %>
      <div class="toast toast-success" data-controller="toast" data-toast-delay-value="3000">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="toast toast-error" data-controller="toast" data-toast-delay-value="5000">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <turbo-frame id="main-content" class="flex-1 flex flex-col overflow-hidden">
      <%= yield %>
    </turbo-frame>
  </main>
</div>

<!-- Modal container -->
<turbo-frame id="modal"></turbo-frame>

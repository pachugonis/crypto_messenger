<turbo-frame id="modal">
  <div class="modal-backdrop" data-controller="modal" data-action="click->modal#closeOnBackdrop">
    <div class="modal-content" data-action="click->modal#stopPropagation">
      <div class="modal-header">
        <h2 class="modal-title"><%= t("two_factor.backup_codes.title") %></h2>
        <button class="modal-close" data-action="click->modal#close" type="button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

    <div class="modal-body custom-scrollbar space-y-4">
      <div class="flex items-start gap-3 p-4 bg-success/10 border border-success/20 rounded-lg">
        <svg class="w-5 h-5 text-success flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-sm"><%= t("two_factor.messages.codes_regenerated") %></p>
      </div>

      <div class="flex items-start gap-3 p-4 bg-warning/10 border border-warning/20 rounded-lg">
        <svg class="w-5 h-5 text-warning flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <div>
          <p class="font-medium"><%= t("two_factor.backup_codes.description") %></p>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-2">
        <% @backup_codes.each do |code| %>
          <div class="px-3 py-2 bg-dark-surface rounded font-mono text-sm text-center">
            <%= code %>
          </div>
        <% end %>
      </div>

      <button onclick="navigator.clipboard.writeText(this.getAttribute('data-codes')).then(() => { this.innerHTML = '✓ Скопировано!'; this.classList.add('btn-success'); this.classList.remove('btn-secondary'); setTimeout(() => { location.reload(); }, 1500); }).catch(() => alert('Ошибка копирования'))" data-codes="<%= @backup_codes.join("\n") %>" class="btn btn-secondary w-full">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
        </svg>
        <%= t("two_factor.backup_codes.copy_all") %>
      </button>

      <%= link_to t("common.close"), two_factor_settings_path, class: "btn btn-primary w-full", data: { turbo_frame: "modal" } %>
    </div>
    </div>
  </div>
</turbo-frame>

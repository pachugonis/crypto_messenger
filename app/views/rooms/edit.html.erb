<turbo-frame id="modal">
  <div class="modal-backdrop" data-controller="modal" data-action="click->modal#closeOnBackdrop keydown@window->modal#closeOnEscape">
    <div class="modal max-h-[90vh] overflow-y-auto" data-modal-target="content">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold"><%= t("rooms.edit.title") %></h2>
        <%= link_to @room, class: "btn-icon btn-ghost", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        <% end %>
      </div>

      <%= form_with model: @room, class: "space-y-4", multipart: true do |f| %>
        <% if @room.errors.any? %>
          <div class="p-4 rounded-lg bg-error/20 text-error border border-error/30 text-sm">
            <ul class="list-disc list-inside space-y-1">
              <% @room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Image Section -->
        <div>
          <label class="label"><%= t("rooms.image") %></label>
          
          <% if @room.image.attached? %>
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0">
                <%= image_tag @room.image.variant(resize_to_limit: [200, 200]), class: "w-20 h-20 rounded-lg object-cover" %>
              </div>
              <div class="flex-1">
                <%= link_to t("rooms.remove_image"), destroy_image_room_path(@room), method: :delete, class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: t("rooms.confirm_remove_image"), turbo_frame: "_top" } %>
              </div>
            </div>
          <% end %>
          
          <%= f.file_field :image, accept: "image/*", class: "input" %>
          <p class="text-xs text-dark-text-muted mt-1"><%= t("rooms.image_description") %></p>
        </div>

        <div>
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: "input", required: true %>
        </div>

        <div>
          <%= f.label :description, class: "label" %>
          <%= f.text_area :description, class: "input", rows: 3 %>
        </div>

        <% if @room.channel? %>
          <div>
            <%= f.label :visibility, class: "label" %>
            <%= f.select :visibility, [
              [t("rooms.visibility.private"), "private_room"],
              [t("rooms.visibility.public"), "public_room"]
            ], {}, class: "input" %>
          </div>
        <% end %>

        <% unless @room.personal_chat? %>
          <hr class="border-dark-border">

          <div>
            <h3 class="font-semibold mb-2"><%= t("rooms.invite_link.title") %></h3>
            <p class="text-sm text-dark-text-muted mb-3"><%= t("rooms.invite_link.description") %></p>
            
            <div class="flex gap-2">
              <div class="input flex-1 bg-dark-surface-hover cursor-not-allowed" id="room-link">
                <%= room_url(@room) %>
              </div>
              <button type="button" onclick="copyRoomLink(this, '<%= room_url(@room) %>')" class="btn btn-secondary btn-icon" title="<%= t('rooms.invite_link.copy') %>">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              </button>
            </div>
            
            <% if @room.display_handle %>
              <div class="mt-3">
                <p class="text-sm text-dark-text-muted mb-2"><%= t("rooms.invite_link.handle_label") %></p>
                <div class="flex gap-2">
                  <div class="input flex-1 bg-dark-surface-hover cursor-not-allowed font-mono" id="room-handle">
                    <%= @room.display_handle %>
                  </div>
                  <button type="button" onclick="copyRoomHandle(this, '<%= @room.display_handle %>')" class="btn btn-secondary btn-icon" title="<%= t('rooms.invite_link.copy') %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <hr class="border-dark-border">

        <h3 class="font-semibold"><%= t("rooms.show.participants") %></h3>
        <div class="space-y-2 max-h-48 overflow-y-auto">
          <% @room.room_participants.includes(:user).each do |participant| %>
            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-dark-surface-hover">
              <div class="flex items-center gap-2">
                <div class="avatar avatar-sm">
                  <%= participant.user.username[0].upcase %>
                </div>
                <span><%= participant.user.username %></span>
                <% if participant.owner? %>
                  <span class="badge badge-primary text-xs"><%= t("participants.roles.owner") %></span>
                <% elsif participant.admin? %>
                  <span class="badge badge-warning text-xs"><%= t("participants.roles.admin") %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= link_to t("common.cancel"), @room, class: "btn btn-secondary flex-1", data: { turbo_frame: "modal" } %>
          <%= f.submit t("common.save"), class: "btn btn-primary flex-1" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <script>
    function copyRoomLink(button, url) {
      const originalHtml = button.innerHTML;
      navigator.clipboard.writeText(url).then(() => {
        button.innerHTML = '✓';
        button.classList.add('btn-success');
        button.classList.remove('btn-secondary');
        setTimeout(() => {
          button.innerHTML = originalHtml;
          button.classList.remove('btn-success');
          button.classList.add('btn-secondary');
        }, 2000);
      }).catch(() => {
        alert('Ошибка копирования');
      });
    }
    
    function copyRoomHandle(button, handle) {
      const originalHtml = button.innerHTML;
      navigator.clipboard.writeText(handle).then(() => {
        button.innerHTML = '✓';
        button.classList.add('btn-success');
        button.classList.remove('btn-secondary');
        setTimeout(() => {
          button.innerHTML = originalHtml;
          button.classList.remove('btn-success');
          button.classList.add('btn-secondary');
        }, 2000);
      }).catch(() => {
        alert('Ошибка копирования');
      });
    }
  </script>
</turbo-frame>
